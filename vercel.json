{
  "buildCommand": "cd apps/client && pnpm install && pnpm build",
  "outputDirectory": "apps/client/dist",
  "framework": "vite",
  "installCommand": "pnpm install",
  "devCommand": "cd apps/client && pnpm dev",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}