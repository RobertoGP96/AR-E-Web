# Django Configuration
SECRET_KEY=tu-secret-key-super-segura-aqui
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Para desarrollo local, deja DATABASE_URL vacío para usar SQLite3
# Para producción (Neon), establece tu string de conexión de Neon PostgreSQL
DATABASE_URL=

# Ejemplo de formato DATABASE_URL para Neon:
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name?sslmode=require

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-de-app

# Website Configuration
WEB_SITE_NAME=AR-E Web Platform
VERIFICATION_URL=http://localhost:5173/verify?token=

# Email Verification (deshabilitado por defecto para desarrollo)
ENABLE_EMAIL_VERIFICATION=False

# Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret

# Amazon Scraper Configuration
# Lista de proxies separados por coma para evitar bloqueos
# Ejemplo: AMAZON_SCRAPER_PROXIES=http://proxy1.example.com:8080,http://proxy2.example.com:8080
AMAZON_SCRAPER_PROXIES=

# JWT Configuration
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_ALL_ORIGINS=False

# Logging Configuration
USE_FILE_LOGGING=False
