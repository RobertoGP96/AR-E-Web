# Configuración específica para Cloudflare Pages
# Este archivo será leído automáticamente por Pages

# Build Settings
BUILD_COMMAND = "cd apps/client && pnpm install && pnpm build"
BUILD_OUTPUT_DIRECTORY = "apps/client/dist"

# Node.js version
NODE_VERSION = "18"

# Environment Variables
VITE_API_URL = "https://your-backend-url.onrender.com/api"
VITE_APP_ENV = "production"
VITE_APP_NAME = "AR-E-Web Client"

# Framework preset
FRAMEWORK_PRESET = "vite"