{
  "name": "ar-e-web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:client\" \"pnpm dev:admin\" \"pnpm dev:backend\"",
    "dev:client": "pnpm --filter client dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:backend": "cd backend && python manage.py runserver",
    "build": "pnpm build:client && pnpm build:admin",
    "build:client": "pnpm --filter client build",
    "build:client:vercel": "pnpm --filter client build:vercel",
    "build:admin": "pnpm --filter admin build",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "lint:admin": "pnpm --filter \"./apps/admin/*\" lint",
    "lint:client": "pnpm --filter \"./apps/client/*\" lint",
    "lint:fix": "pnpm --filter \"./apps/*\" lint --fix",
    "lint:client-fix": "pnpm --filter \"./apps/client/*\" lint --fix",
    "test": "pnpm --filter \"./apps/*\" test",
    "clean": "pnpm --filter \"./apps/*\" exec rm -rf dist node_modules",
    "install:all": "pnpm install && cd backend && pip install -r requirements.txt",
    "type-check": "pnpm --filter \"./apps/*\" exec tsc --noEmit"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "python": ">=3.11.0"
  },
  "packageManager": "pnpm@8.15.0"
}