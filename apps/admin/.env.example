# =============================================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO PARA EL FRONTEND ADMIN
# =============================================================================

# URL del backend Django API
VITE_API_URL=http://localhost:8000/arye_system

# Configuración de desarrollo
VITE_APP_MODE=development
VITE_APP_NAME=Arye System Admin
VITE_APP_VERSION=1.0.0

# Configuración de autenticación
VITE_AUTH_TOKEN_KEY=access_token
VITE_REFRESH_TOKEN_KEY=refresh_token

# Configuración de API
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Configuración de logging
VITE_ENABLE_API_LOGGING=true
VITE_ENABLE_ERROR_LOGGING=true

# Configuración de paginación por defecto
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Configuración de uploads
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv,xlsx

# URLs de documentación
VITE_API_DOCS_URL=http://localhost:8000/api/docs/
VITE_API_SCHEMA_URL=http://localhost:8000/api/schema/

# Feature flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_NOTIFICATIONS=true

# Configuración de tema
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=es
